# Database
DATABASE_URL=postgresql+asyncpg://erpmax:erpmax_dev_password@localhost:5432/erpmax_orchestrator

# Redis
REDIS_URL=redis://localhost:6379/0

# RabbitMQ
RABBITMQ_URL=amqp://erpmax:erpmax_dev_password@localhost:5672/

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Application
DEBUG=true
ENVIRONMENT=development
PROJECT_NAME=ERPMax Orchestrator
VERSION=0.1.0

# CORS - Comma-separated list of allowed origins
# For development: http://localhost:3000,http://localhost:8000
# For production: https://app.erpmax.com,https://admin.erpmax.com
# To allow all origins (NOT recommended for production): *
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000

# ERPNext
ERPNEXT_BASE_URL=https://erpnext.example.com

# Payment Providers
# For development/testing without real Stripe: use "sk_test_mock_development" or "mock"
# For production: use real Stripe keys from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_mock_development
STRIPE_WEBHOOK_SECRET=whsec_mock_development
LIQPAY_PUBLIC_KEY=sandbox_...
LIQPAY_PRIVATE_KEY=sandbox_...
